<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_margin="10dp"

    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_vertical"
                    android:textColor="@color/textLogin"
                    android:textStyle="bold"
                    android:text="To number: "
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"></TextView>
                <TextView
                    android:id="@+id/txtToNumber"
                    android:textColor="@color/textLogin"
                    android:textStyle="bold"
                    android:gravity="center_vertical"
                    android:text=" 0826261296"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"></TextView>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtFromNumber"
                    android:textColor="@color/textLogin"
                    android:layout_weight="1"
                    android:text="[Sim2 - Mobifone]"
                    android:layout_width="0dp"
                    android:layout_height="30dp"></TextView>
                <TextView
                    android:id="@+id/txtTime"
                    android:textColor="@color/textLogin"
                    android:layout_weight="1"
                    android:text=" 08/03/2020 08:31:54"
                    android:layout_width="0dp"
                    android:layout_height="30dp"></TextView>


            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/txtStatus"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="đã gửi"></TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="3dp"
        android:background="@color/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"></LinearLayout>
</LinearLayout>